{
  "rules": {
    "jsx-a11y/anchor-is-valid": "off",
    "react/prop-types": "off",
    "no-unused-vars": "off" // không khuyến nghị lâu dài, sau khi hoàn thiện hãy bật để check lỗi dư thừa
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "env": {
    "browser": true,
    "node": true
  }
}
